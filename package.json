{
  "name": "systemic-consensys",
  "version": "1.0.0",
  "description": "A voting tool according to the systemic consensys principles",
  "main": "server/server.ts",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "concurrently \"npm run mongodb\" \"npm run server\" \"npm run client\"",
    "server": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server/server.ts",
    "mongodb": "mongod --dbpath data/db",
    "client": "react-scripts-ts start",
    "build-client": "react-scripts-ts build",
    "test-client": "react-scripts-ts test",
    "eject": "react-scripts-ts eject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leonvdb/systemic-consensys.git"
  },
  "author": "Marek Meyer & Leon von dem Berge",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/leonvdb/systemic-consensys/issues"
  },
  "homepage": "https://github.com/leonvdb/systemic-consensys#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parse": "^0.1.0",
    "bootstrap": "^4.1.3",
    "bs58": "^4.0.1",
    "classnames": "^2.2.6",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "i18next": "^13.0.0",
    "i18next-xhr-backend": "^1.5.1",
    "express-async-handler": "^1.1.4",
    "mongodb": "^3.1.10",
    "mongoose": "^5.3.12",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-i18next": "^8.4.0",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "react-scripts-ts": "^4.0.8",
    "reactstrap": "^6.5.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uuid4": "^1.1.4"
  },
  "devDependencies": {
    "@types/bs58": "^3.0.30",
    "@types/classnames": "^2.2.6",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/i18next-xhr-backend": "^1.4.1",
    "@types/mongodb": "^3.1.17",
    "@types/mongoose": "^5.3.4",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.10",
    "@types/react-router-dom": "^4.3.1",
    "@types/reactstrap": "^6.4.3",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.6",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:5000"
}