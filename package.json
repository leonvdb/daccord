  "description": "A voting tool according to the systemic consensys principles",
  "main": "server/server.ts",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "npm-run-all -l -p mongodb server client",
    "server": "nodemon --signal SIGTERM --watch \"src/**/*.ts\" --ignore \"src/**/*.spec.ts\" --exec \"node_modules/.bin/ts-node\" src/server/server.ts",
    "mongodb": "mongod --dbpath data/db",
    "client": "react-scripts-ts start",
    "build-client": "react-scripts-ts build",
    "test-client": "react-scripts-ts test --verbose false",
    "eject": "react-scripts-ts eject",
    "test": "jest --watch --verbose false"
